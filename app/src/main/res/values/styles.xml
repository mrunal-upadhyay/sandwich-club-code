<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <style name="textViewValueStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/tv_margin_left</item>
    <item name="android:layout_marginRight">@dimen/tv_margin_right</item>
  </style>

  <style name="textViewKeyStyle" parent="textViewValueStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/tv_margin_top</item>
  </style>

</resources>
